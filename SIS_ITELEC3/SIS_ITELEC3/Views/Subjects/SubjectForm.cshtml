@model SIS_ITELEC3.Models.Subjects
@{
    ViewBag.Title = "SubjectForm";
}

@{
    var title = Model.Id == 0 ? "New" : "Edit";
}

<h2>@title</h2>

@using (Html.BeginForm("Save", "Subjects"))
{
    <div class="form-group">
        @Html.LabelFor(s => s.Name)
        @Html.TextBoxFor(s => s.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Year)
        @Html.TextBoxFor(s => s.Year, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Year)
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Semester)
        @Html.TextBoxFor(s => s.Semester, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Semester)
    </div>

    @Html.HiddenFor(s => s.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

